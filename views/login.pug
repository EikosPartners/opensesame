extends layout

block content
	#login-container
		form(action=redirectUrl ? ("auth/login?redirectUrl=" + redirectUrl) : "auth/login", method="post")#login-form.well.span4
			div
				span.title Login
			.unauthorized #{unauthorized}
			label Username:
			div
				input(type="text", name="username").span4.required
			label Password:
			div
				input(type="password", name="password").span4.required
			a(href="/register") Register
			br
			div
				button(type="submit")#btn-login.btn.btn-primary
					i.icon-lock.icon-white
					| Sign in
